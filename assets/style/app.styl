// Import Vuetify styling
@require '~assets/style/material-icons'
@require '~assets/style/firebaseui'
@require '~vuetify/src/stylus/main'

.accent{
  background-color:#ffeb3b!important;
  border-color:#ffeb3b!important;
}
.page
  @extend .fade-transition

.plain {
  background: #ffffff;
}

#card {
  border-radius: 2px;
}

.home-banner {
  top : -120px;
}
.home-section {
  position relative;
  height : 100px;
}
@media only screen and (max-width: 960px) {
  .home-banner {
    top : -80px;
  }
  .home-section {
    position relative;
    height : 100px;
  }
}

.wrapper {
  width: 100%;
  height : 100%;
}
.center {
  margin: auto;
  // width: 100%;
  text-align: start;
}
.center-content {
  max-width: 600px;
  height: auto;
  margin: 0 auto;
  overflow: hidden;
}
.center-content img {
  width: 100%;
  height: auto;
  position: relative;
  top: -1px;
}

.view {
  max-width: 1000px !important;
  margin: 0 auto;
  position: relative;
}

.plainlist-ul  {
  list-style-type: none;
}

// Home
.searchbox {
  margin-top: -300px;
}
.search {
  width: 300px;
}
.scrollable{
  overflow: auto;
  position: absolute;
  height: 100%;
}

@media only screen and (max-width: 960px) {
  .scrollable{
    overflow: auto;
    position: inherit;
    height: 100%;
  }
}

.halfway{
  position: relative;
}

// Lazy Image

img, canvas, .placeholder {
  width: auto;
}
.placeholder {
  background-color: rgba(0,0,0,1);
}
canvas {
  filter: blur(10px);
}
.blur-transition {
  transition: opacity linear .4s 0s;
  opacity: 1;
}
.blur-enter, .blur-leave {
  opacity: 0;
}

// Cards

.background-gradient {
  background:linear-gradient(to top,rgba(0,0,0,.30),rgba(0,0,0,.55)); 
  border-radius: 2px;
}
a {
  text-decoration: none ;
}

.responsive {
  width: 100%;
  max-width: 100%;
  max-height: 100%;
  height: auto;
  object-fit:  cover;
  object-position: center;
  border-radius: 2px;
  position: absolute;
}

.v-breadcrumbs
  align-items: center
  display: flex
  flex-wrap: wrap
  flex: $breadcrumbs-flex
  list-style-type: none
  margin: $breadcrumbs-margin
  padding: $breadcrumbs-padding
  a
    color: #4e3724;

  li
    align-items: center
    display: inline-flex
    font-size: $breadcrumbs-item-font-size

    .v-icon
      font-size: $breadcrumbs-item-large-font-size

    &:last-child a
      cursor: default
      pointer-events: none

    &:nth-child(even)
      padding: $breadcrumbs-even-child-padding

  &--large
    li
      font-size: $breadcrumbs-item-large-font-size

      .v-icon
        font-size: $breadcrumbs-item-large-font-size

  &__item
    align-items: center
    display: inline-flex
    text-decoration: none
    transition: $primary-transition

    &--disabled
      pointer-events: none
      color: rgba(0,0,0,0.38)!important;
      
//  google adsens

.addiv {
  align-content: center;
}

.adinlinediv {
  align-content: center;
  margin-top: 8px;
}

.progress {
  margin: 0 !important;
}

// Paddings
.padleftdiv {
  margin-left: 48px !important;
}

.padequaldiv {
  margin-left: 48px !important;
  margin-right: 48px !important;
}

@media only screen and (max-width: 960px) {
  .padleftdiv {
    margin-left: 0 !important;
  }
  .padequaldiv {
    margin-left: 0 !important;
    margin-right: 0 !important;
  }
}

// LeafletJS
.leaflet-bar {
  border: none !important;
  box-shadow: none !important;
}
.leaflet-bar a {
  margin: 5px;
  display:block;
  width:35px !important;
  height:35px !important;
  border-radius: 50% !important;
  line-height: 32px !important;
}
.leaflet-control {
  float: unset !important;
}
.leaflet-control {
    margin-left: 5px !important;
}

// Links

.main-link {
  border-bottom: 3px solid #ffeb3b;
  color: #4e3724;
}

.main-link:hover {
  @extend .accent;
  color: #4e3724
}

.simple-link {
  font-weight: bold;
  color: #4e3724;
}

.simple-link:hover {
  border-bottom: 3px solid #4e3724;
  font-weight: bold;
  color: #4e3724
}

.dot {
  display: flex;
  justify-content: flex-start;
  height: 25px;
  width: 25px;
  border-radius: 50%;
}

.tile {
  display: flex;
}

// Progress
.app-progress {
  position: fixed;
  top: 30%;
  left: 50%;
  right: 50%;
  height: 0px;
  width: 0%;
  transition: width 0.2s, opacity 0.4s;
  z-index: 1;
}

@media only screen and (max-width: 960px) {
  .app-progress {
    top: 50%;
  }
}

.nuxt-progress {
  position: fixed;
  top: 0px;
  left: 0px;
  right: 0px;
  height: 2px;
  width: 0%;
  transition: width 0.2s, opacity 0.4s;
  opacity: 1;
  background-color: #efc14e;
  z-index: 999999;
}

.scrolling-wrapper {
  display: flex;
  align-items: center;
  overflow-x: auto;
  min-width: 0;  
  -webkit-overflow-scrolling: touch;
  &::-webkit-scrollbar {
    display: none;
  }
  .item {
    flex: 0 0 auto;
  }
}

//Bookmark
.bookmark-layout{
  position: relative;
}

.bookmark{
  position: absolute;
  bottom: 0;
  right: 0;
}

// Iphone safa area
.inset-padding-top {
  padding-top: env(safe-area-inset-top);
}
.inset-padding-left {
  padding-left: env(safe-area-inset-left) !important;
}
.inset-margin-top {
  margin-top: env(safe-area-inset-top);
}
.v-content__wrap, .v-toolbar__extension {
  margin-top: env(safe-area-inset-top);
}
.v-toolbar__content {
  margin-top: env(safe-area-inset-top);
}